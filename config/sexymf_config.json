{
	// external_bins is a list of external commands you want SexyMF to be
	// able to exectute. So, if you don't want anyone to be able to call
	// a particular command through the API, take it out of here. Some
	// objects contain an array of flags. Only those flags can be used. Some
	// commands have subcommands, which are another command-like object
	// nested inside the higher-level one.

	"external_bins": {
		"/usr/sbin/zlogin": {},
		"/bin/tail": {},
		"/bin/ppriv": {},
		"/bin/zonename": {},
		"/bin/svcs": {},
		"/bin/svcprop": {},
		"/usr/sbin/svcadm": {
			"restart": {},
			"refresh": {},
			"enable": {
				"flags": [ "-t" ]
			},
			"disable": {
				"flags": [ "-t" ]
			},
			"clear" : {},
			"mark": {
				"flags": [ "-t" ]
			}
		},
		"/usr/sbin/svccfg": {
			"archive": {},
			"export": {},
			"extract": {
				"flags": [ "-a" ]
			}
		}
	},

	// Only clients from these IP addresses can connect

	//"allowed_addr": [ "127.0.0.1" ],

	// Set 'use_auths' to false to bypass user authentication

	"use_auths": true,

	// Users.

	"users": {
		"myuser": {
			"password":
				"sha1$498e6519$1$9ec4ded71edb6d1b8c2b634df1901d1b18b2b979",
			"auths": [ "view", "manage" ]
		},
		"viewer": {
			"password": "plainpass",
			"auths": [ "view" ]
		},
		"logviewer": {
			"password": "plainpass",
			"auths": [ "view", "log"]
		},
		"archiver": {
			"password": "plainpass",
			"auths": [ "view", "log", "archive" ]
		},
		"manager": {
			"password": "plainpass",
			"auths": [ "view", "manage" ]
		},
		"tamperer": {
			"password": "plainpass",
			"auths": [ "view", "manage", "alter" ]
		}
	},

	// SSL

	"ssl": {
		"enabled": true,
		"certificate": "config/ssl/server.crt",
		"key": "config/ssl/server.key"
	},

	// The port the server listens on -- override with -p

	"listen_port": 9206,

	// Be verbose -- force to true with -v

	"verbose" : true,

	// Use zlogin to run NGZ commands on Illumos

	//"force_zlogin": true,

	// Unless told otherwise, send the last "this many" lines of log file

	"loglines": 100,

	"blacklist": []
}
